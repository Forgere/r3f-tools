{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"noEmit": false,
		"emitDeclarationOnly": true,
		"declaration": true,
		"declarationDir": "dist",
		"outDir": "dist"
	},
	"include": ["src/**/*"],
	"exclude": [
		"node_modules",
		"dist",
		"examples",
		"**/*.test.ts",
		"**/*.test.tsx"
	]
}
